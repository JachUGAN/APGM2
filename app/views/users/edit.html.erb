<% provide(:title, "Edit user") %>
<h1>Update your profile</h1>

<div class="row">

	<div class="span6 offset0">
		<div class="hero-unit">
		<%= form_for(@user) do |f| %>
			<%= render 'shared/error_messages' %>
			<%= f.label :first_name %>
			<%= f.text_field :first_name %>
			<%= f.label :last_name %>
			<%= f.text_field :last_name %>
			<%= f.label :username %>
			<%= f.text_field :username %>
			<%= f.label :email %>
			<%= f.text_field :email %>
			<%= f.label :rank %>
			<%= f.text_field :rank, placeholder: "Optional" %>
			<%= f.label :city %>
			<%= f.text_field :city, placeholder: "Optional" %>
			<%= f.label :description %>
			<%= f.text_area :description, placeholder: "Optional, Max 200 Characters" %>
			<%= f.label :password %>
			<%= f.password_field :password %>
			<%= f.label :password_confirmation, "Confirm Password" %>
			<%= f.password_field :password_confirmation %>
			<%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
		<% end %>
		<%= gravatar_for @user %>
		<a href="http://gravatar.com/emails">Change Avatar</a>
		</div>
	</div>
</div>